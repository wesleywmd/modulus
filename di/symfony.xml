<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="modulus.application" class="Modulus\Application">
            <argument key="name">Modulus</argument>
            <argument key="version">0.0.0</argument>
        </service>

        <service id="modulus.components.config.cachedconfigfactory" class="Modulus\Components\Config\CachedConfigFactory"/>
        <service id="modulus.components.config.configarrayfactory" class="Modulus\Components\Config\ConfigArrayFactory"/>
        <service id="modulus.components.files.filegeneratorfactory" class="Modulus\Components\Files\FileGeneratorFactory"/>
        <service id="modulus.components.shell.shellcommandfactory" class="Modulus\Components\Shell\ShellCommandFactory"/>
        <service id="modulus.components.shell.terminal" class="Modulus\Components\Shell\Terminal"/>
        <service id="modulus.components.style.iofactory" class="Modulus\Components\Style\IoFactory"/>

    </services>
</container>